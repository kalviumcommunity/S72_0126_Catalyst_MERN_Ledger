// Prisma schema for Ledger (Next.js app)
// This lives inside Frontend/ledger so `prisma generate` works correctly.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Roles: "user" (viewer), "ngo" (can claim locations)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ngos Ngo[]

  @@index([email])
  @@map("users")
}

// One location per NGO entry. An NGO account can have multiple locations.
// Only one ACTIVE NGO per location (enforced via application logic)
model Ngo {
  id             Int      @id @default(autoincrement())
  name           String
  location       String
  contactNumber  String?
  description    String?
  accountOwnerId Int
  accountOwner   User     @relation(fields: [accountOwnerId], references: [id])
  isActive       Boolean  @default(true)  // false = task ended, location released
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  tasks   Task[]
  ratings Rating[]

  @@index([location])
  @@index([accountOwnerId])
  @@index([isActive])
  @@map("ngos")
}

// Task with OTP for event verification
model Task {
  id        Int      @id @default(autoincrement())
  ngoId     Int
  ngo       Ngo      @relation(fields: [ngoId], references: [id], onDelete: Cascade)
  otp       String   // 6-digit OTP generated by NGO
  isActive  Boolean  @default(true)
  expiresAt DateTime // OTP expiry
  createdAt DateTime @default(now())

  ratings Rating[]

  @@index([ngoId])
  @@index([otp])
  @@map("tasks")
}

// Rating given by a user for a specific task/location
model Rating {
  id        Int      @id @default(autoincrement())
  taskId    Int
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  ngoId     Int
  ngo       Ngo      @relation(fields: [ngoId], references: [id], onDelete: Cascade)
  userId    Int
  stars     Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())

  @@unique([taskId, userId]) // One rating per user per task
  @@index([ngoId])
  @@index([taskId])
  @@map("ratings")
}

